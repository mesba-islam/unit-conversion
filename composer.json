{
    "name": "mesba/unitconversion",
    "description": "perform unit conversion in php",
    "keywords": [
        "mesba",
        "unit conversions"
    ],
    "homepage": "https://github.com/:vendor_slug/:package_slug",
    "license": "MIT",
    "authors": [
        {
            "name": "Mesba",
            "email": "mesbansu@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",

        "friendsofphp/php-cs-fixer": "^3.0"

    },
    "autoload": {
        "psr-4": {
            "Mesba\\UnitConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mesba\\UnitConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "codestyle": "phpcs"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpunit/phpunit": true

        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
